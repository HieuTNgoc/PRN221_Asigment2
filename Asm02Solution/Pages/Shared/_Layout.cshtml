<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Asm02Solution</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Asm02Solution.styles.css" asp-append-version="true" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index"><img class="logo" src="~/images/logo_transparent.png"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @{
                            if (Model.Account != null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-page="/Products/Index">Products</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-page="/Orders/Index">Orders History</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-page="/Customers/Index">Customers Management</a>
                                </li>
                            }
                        }
                        @{
                            if (Model.Account != null)
                            {
                                if (Model.Account.Type == 1)
                                {
                                    <li class="nav-item dropdown">
                                        <a class="dropdown-toggle nav-link text-white bg-transparent" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="bi bi-gear"></i>  Settings
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" asp-page="/Users/Index">Users</a></li>
                                            <li><a class="dropdown-item" asp-page="/Categories/Index">Categories</a></li>
                                            <li><a class="dropdown-item" asp-page="/Suppliers/Index">Suppliers</a></li>
                                        </ul>
                                    </li>
                                }
                            }
                        }
                    </ul>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @{
                            if (Model.Account != null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-page="/Users/Details" asp-route-id="@Model.Account.AccountId"><i class="bi bi-box-arrow-in-right"></i> @Model.Account.UserName</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-page="/Index" asp-page-handler="logout"><i class="bi bi-person-check"></i> Logout</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-page="/Users/Login"><i class="bi bi-box-arrow-in-right"></i> Login</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-page="/Users/Register"><i class="bi bi-person-check"></i> Register</a>
                                </li>
                            }
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("NToastNotify")
</body>
</html>